{
  "name": "rafael-ramalho-website",
  "version": "1.0.0",
  "description": "Website for rafaelramalho.dev",
  "main": "index.html",
  "scripts": {
    "start": "parcel serve index.html",
    "build": "rimraf dist ; parcel build index.html dist/",
    "deploy": "gh-pages -b master -d dist",
    "lintcss": "stylelint styles/**.scss"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rafaelramalho19/curriculum.git"
  },
  "keywords": [
    "rafael",
    "ramalho",
    "frontend",
    "developer",
    "javascript",
    "html",
    "css",
    "github",
    "pages"
  ],
  "author": "rafaelramalho19",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rafaelramalho19/curriculum/issues"
  },
  "homepage": "https://github.com/rafaelramalho19/curriculum#readme",
  "devDependencies": {
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.1",
    "lint-staged": "^9.2.1",
    "node-sass": "^4.12.0",
    "parcel": "^1.12.3",
    "prettier": "1.18.2",
    "rimraf": "^2.6.3",
    "stylelint": "^10.1.0",
    "stylelint-config-moxy": "^6.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lintcss && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
