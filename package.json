{
  "name": "rafael-ramalho-website",
  "version": "1.0.0",
  "description": "Website for rafaelramalho.dev",
  "scripts": {
    "start": "parcel serve index.html",
    "build": "parcel build index.html --dist-dir dist",
    "deploy": "npm run build ; ncp CNAME dist/CNAME ; gh-pages -b master -d dist",
    "lint": "eslint js/**",
    "lintcss": "stylelint styles/**.scss"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rafaelramalho19/curriculum.git"
  },
  "keywords": [
    "rafael",
    "ramalho",
    "frontend",
    "developer",
    "javascript",
    "html",
    "css",
    "github",
    "pages"
  ],
  "author": "rafaelramalho19",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rafaelramalho19/curriculum/issues"
  },
  "homepage": "https://github.com/rafaelramalho19/curriculum#readme",
  "devDependencies": {
    "@parcel/packager-raw-url": "2.6.2",
    "@parcel/packager-xml": "2.6.2",
    "@parcel/transformer-sass": "2.6.2",
    "@parcel/transformer-webmanifest": "2.6.2",
    "@parcel/transformer-xml": "2.6.2",
    "eslint": "^8.19.0",
    "eslint-plugin-prettier": "^4.2.1",
    "gh-pages": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "ncp": "^2.0.0",
    "node-sass": "^7.0.1",
    "parcel": "^2.6.2",
    "prettier": "^2.7.1",
    "stylelint": "^14.9.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lintcss && lint-staged",
      "pre-push": "npm run deploy"
    }
  },
  "lint-staged": {
    "*.{js,css}": [
      "eslint",
      "git add"
    ]
  },
  "dependencies": {
    "gsap": "^3.10.4"
  }
}